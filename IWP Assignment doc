function func1(){
var x = document.getElementById("age").value;
if(x<0 || x>100)
{
document.getElementById("spanage").innerHTML = "Kindly enter a valid age";
document.getElementById("age").focus();
}
else
{
document.getElementById("spanage").innerHTML = "";
}
}
function func2(){
var x = document.getElementById("height").value;
if(x<0 || x>20)
{
document.getElementById("spanheight").innerHTML = "Kindly enter a valid height";
document.getElementById("height").focus();
}
else
{
document.getElementById("spanheight").innerHTML = "";
}
}
function func3(){
var x = document.getElementById("weight").value;
if(x<0 || x>200)
{
document.getElementById("spanweight").innerHTML = "Kindly enter a valid weight";
document.getElementById("weight").focus();
}
else
{
document.getElementById("spanweight").innerHTML = "";
}
}
function func4(){
var x = document.getElementById("chest").value;
if(x<0 || x>300)
{
document.getElementById("spanchest").innerHTML = "Kindly enter a valid chest";
document.getElementById("chest").focus();
}
else
{
document.getElementById("spanchest").innerHTML = "";
}
}
